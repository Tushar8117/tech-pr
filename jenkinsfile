pipeline {
    agent any
    environment {
        ECR_REPO_NAME = "my-ecr-repo"
        AWS_REGION = "ap-south-1"
        DOCKER_IMAGE = "442426880129.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO_NAME}"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Setup ECR') {
            steps {
                dir('src') {
                    script {
                        // Initialize Terraform for ECR setup
                        sh '''
                        terraform init
                        terraform plan -out=tfplan
                        terraform apply -auto-approve tfplan
                        '''
                    }
                }
            }
        }
        stage('Build and Push Docker Image') {
            steps {
                dir('src') {
                    script {
                        sh '''
                        $(aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin 442426880129.dkr.ecr.${AWS_REGION}.amazonaws.com)
                        docker build -t ${DOCKER_IMAGE}:latest .
                        docker push ${DOCKER_IMAGE}:latest
                        '''
                    }
                }
            }
        }
        stage('Setup Lambda, RDS, and S3') {
            steps {
                dir('terraform') {
                    script {
                        // Initialize Terraform for Lambda, RDS, and S3 setup
                        sh '''
                        terraform init
                        terraform plan -out=tfplan
                        terraform apply -auto-approve tfplan
                        '''
                    }
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution completed.'
        }
    }
}
